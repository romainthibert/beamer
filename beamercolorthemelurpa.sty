
\mode<presentation>

\definecolor{accent}{HTML}{840847}
\definecolor{slideprimary}{HTML}{5eb0e5}
\definecolor{slidesecondary}{HTML}{2350a9}

\setbeamercolor{itemize item}{fg=slideprimary}
\setbeamercolor{itemize/enumerate body}{fg=slidesecondary}
\setbeamercolor{itemize subitem}{fg=slideprimary}
\setbeamercolor{itemize subsubitem}{fg=slideprimary}

\setbeamercolor{title}{fg=slidesecondary}
\setbeamercolor{subtitle}{fg=accent}
\setbeamercolor{author}{fg=slideprimary}

% Make the footline background transparent
\setbeamercolor{footline}{fg=slideprimary,bg=}

% Text colors
\setbeamercolor{normal text}{fg=slidesecondary}

%Frame Title
\setbeamercolor{frametitle}{fg=white,bg=slideprimary}
\setbeamercolor{beforetitle}{fg=white,bg=slidesecondary}

%Blocks
\setbeamercolor*{block title}{fg=white,bg=slideprimary}
\setbeamercolor*{block body}{fg=slidesecondary,bg=black!10}
\setbeamercolor*{block title alerted}{fg=white,bg=accent}
\setbeamercolor*{block bodyalerted}{fg=slidesecondary,bg=black!10}

\mode<all>
